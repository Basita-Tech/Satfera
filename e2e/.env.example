# E2E Testing Environment Variables
# Copy this file to .env and fill in the values

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Test Database Configuration
TEST_MONGODB_URL=mongodb://localhost:27017/satfera_e2e_test
TEST_REDIS_URL=redis://localhost:6379/1

# Test Credentials
TEST_USER_EMAIL=testuser@example.com
TEST_USER_PASSWORD=TestPassword123!
TEST_USER_PHONE=+1234567890

# Admin Credentials for cleanup
ADMIN_EMAIL=admin@satfera.com
ADMIN_PASSWORD=AdminPassword123!

# SMS Testing (Twilio Test Credentials)
TWILIO_TEST_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_TEST_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_TEST_PHONE_NUMBER=+15005550006

# Email Testing
TEST_EMAIL_PROVIDER=mailhog
MAILHOG_URL=http://localhost:8025

# File Upload Testing
TEST_UPLOAD_DIR=./test-assets
MAX_FILE_SIZE=5242880

# Performance Testing Thresholds
PERFORMANCE_LOAD_TIME_THRESHOLD=3000
PERFORMANCE_FIRST_CONTENTFUL_PAINT_THRESHOLD=1500
PERFORMANCE_LARGEST_CONTENTFUL_PAINT_THRESHOLD=2500

# Browser Testing
HEADLESS=true
SLOW_MO=0
BROWSER_TIMEOUT=30000

# CI/CD Configuration
CI=false
PARALLEL_WORKERS=2
RETRIES=1

# Security Testing
SECURITY_SCAN_ENABLED=true
XSS_PAYLOADS_FILE=./security/xss-payloads.txt
SQL_INJECTION_PAYLOADS_FILE=./security/sql-payloads.txt